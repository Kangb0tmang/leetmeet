<h1>Events#index</h1>
<p>Find me in app/views/events/index.html.erb</p>
<div class="events_index">

  <div class="events_index_filters">
    <span>Filter by game:</span>
    <select name="" id="game_filter">
      <% @games.each do |game| %>
        <option value=""> <%= game.name %> </option>
      <% end %>
    </select>
  </div>

  <div class="events_index_event_list">
    <% @events.each do |event| %>
      <a href="events/<%= event.id %>">
        <div class="events_index_event">
            <h3> <%= event.title %> </h3>
            <h4> <%= event.user.username %> </h4>
            <h4> <%= event.location %> </h4>
            <h4> <%= event.game.name %> </h4>
            <h4> <%= event.category.name %> </h4>
        </div>       
      </a>
    <% end %>    
  </div>

</div>
<script src="https://code.jquery.com/jquery-3.2.1.js"></script>
